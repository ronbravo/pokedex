{
  "name": "@ronbravo/pkd-pokedex-vue2",
  "version": "0.1.0",
  "description": "The Pokedex main micro app used to manage the loading, mounting, and un-mounting of other micro apps.",
  "main": "index.js",
  "keywords": [],
  "author": "Ron Bravo",
  "license": "MIT",
  "config": {
    "port": 5001
  },
  "alias": {
    "$root": "."
  },
  "staticFiles": {
    "staticPath": "public",
    "watcherGlob": "**"
  },
  "scripts": {
    "app": "npm run app:server",
    "app:build": "parcel build ./src/js/browser/index.html --no-cache ",
    "app:server": "node src/js/server/Server.js ",
    "app:watch": "parcel watch ./src/js/browser/index.html --no-cache ",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "live-server": "^1.2.1",
    "uikit": "^3.5.8",
    "vue": "^2.6.12",
    "vue-hot-reload-api": "^2.3.4"
  },
  "devDependencies": {
    "@vue/component-compiler-utils": "^3.2.0",
    "less": "^3.12.2",
    "less-loader": "^7.0.2",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-static-files-copy": "^2.5.0",
    "pug": "^3.0.0",
    "sass": "^1.27.0",
    "vue-template-compiler": "^2.6.12"
  }
}
